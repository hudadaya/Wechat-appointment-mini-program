<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.SeminarBookingMapper">

    <resultMap id="SeminarBookingMap" type="com.example.demo.entity.SeminarBooking">
            <id property="seminarBookId" column="seminar_book_id" jdbcType="INTEGER"/>
            <result property="seminarUserId" column="seminar_user_id" jdbcType="VARCHAR"/>
            <result property="seminarRoomNumber" column="seminar_room_number" jdbcType="INTEGER"/>
            <result property="seminarDate" column="seminar_date" jdbcType="DATE"/>
<!--        查看预约用的是int-->
            <result property="startTime" column="start_time" jdbcType="INTEGER"/>
            <result property="endTime" column="end_time" jdbcType="INTEGER"/>
<!--        是否可以预约用的是time-->
<!--            <result property="startTime" column="start_time" jdbcType="TIME"/>-->
<!--            <result property="endTime" column="end_time" jdbcType="TIME"/>-->
            <result property="startTimeId" column="start_time_id" jdbcType="INTEGER"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="createUserId" column="create_user_id" jdbcType="VARCHAR"/>
            <result property="updateUserId" column="update_user_id" jdbcType="VARCHAR"/>
    </resultMap>

    <!--    查询所有预约-->
    <select id="getAllBySeminarUserId" resultType="com.example.demo.entity.SeminarBooking"
            resultMap="SeminarBookingMap">
        select * from seminar_booking where BINARY seminar_user_id = #{seminarUserId}
    </select>

    <!--    删除预约记录-->
    <delete id="delete">
        delete from seminar_booking_copy1_copy1
        <where>
            binary seminar_user_id=#{username} and seminar_room_number=#{room} and seminar_date=#{date}
        </where>
    </delete>

<!--    新增预约-->
    <insert id="insertdata">
        insert into seminar_booking(seminar_book_id, seminar_user_id, seminar_room_number, seminar_date, start_time_id,
                                    end_time_id, create_user_id, update_user_id)
            values(#{seminarBookId}, #{seminarUserId}, #{seminarRoomNumber}, #{seminarDate}, #{startTimeId}, #{endTimeId},
                   #{createUserId}, #{updateUserId})
    </insert>

<!--    判断用户在某天是否预约过研讨室-->
    <select id="selectByUserIDAndDate" resultType="com.example.demo.entity.SeminarBooking">
        select * from seminar_booking where seminar_user_id = #{seminarUserId} and seminar_date = #{seminarDate}
    </select>

<!--    拿到某天某个房间的全部预约记录-->
    <select id="selectByDateAndROOM" resultType="com.example.demo.entity.SeminarBooking">
        select * from seminar_booking where seminar_date = #{seminarDate} and seminar_room_number = #{seminarRoomNumber}
    </select>
</mapper>
