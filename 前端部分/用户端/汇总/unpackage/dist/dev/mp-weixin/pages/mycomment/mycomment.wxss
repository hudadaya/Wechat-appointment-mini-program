
.container {
  max-width: 600px;
  margin: 0 auto;
  padding: 20px;
  font-family: Arial, sans-serif;
  color: #333; /* 用于留言文本的颜色 */
}
._h1 {
  text-align: center;
  color: #83c6c2; /* 页面主题色调 */
  margin-bottom: 20px; /* 留白间距 */
}
.message {
  border-bottom: 1px solid #eee; /* 分隔留言的边框线 */
  padding-bottom: 10px;
  margin-bottom: 20px;
}
.date {
  text-align: right;
  color: #999; /* 日期的颜色 */
}

